                data-paroller-factor-md="0.01"
                data-paroller-factor-xs="0.01">
            </div>
            <div class="container pr-0 pl-0"></div>
        </div>
        <div
            id="work"
            class="content bg-silver-lighter"
            data-scrollview="true">
            <div class="container pr-0 pl-0">
                <h2 class="content-title">Gallery Last year</h2>
                <div
                    class="row row-space-10"
                    data-toggle="modal"
                    data-target="#pictures-event">
                    @{ 
                        j = 0;
                    }
                    @for (i = 1; i <= numberOfPictureEvent; i++) {
                        <div class="col-md-3 col-sm-6">
                            <div class="work">
                                <div class="image">
                                    <img
                                        src=@(pictureEventFilePath + "/" + eventLastYear + "/event" + @i + ".jpg")
                                        alt="picture @i"
                                        data-target="#picture-event"
                                        data-slide-to="@j"
                                    />
                                    <div class="eventname">MUIN@(eventLastYear)</div>
                                </div>
                            </div>
                        </div>

                        j++;
                    }
                </div>
            </div>
        </div>
