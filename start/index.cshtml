<script type="text/javascript">
    function doResize() {
        $(".home-content").css({
            "margin-top": (($("#header").height() + 30) + "px")
        });

        $("#home .content-bg").css({
            "margin-top": ($("#header").height() + "px")
        });

        $(".modal-image .modal-dialog").css({
            "height": ($(window).height() + "px")
        });

        $(".modal-image .carousel-item .img").css({
            "height": ($(window).height() + "px")
        });
    }

    function doShowPoster() {
        $("#picture-poster").modal("show");
    }

    function doOnInit() {
        $("html, body").animate({
            scrollTop: 0
        }, 500);

        document.addEventListener("click", function (e) {
            if (document.activeElement.toString() === "[object HTMLButtonElement]")
                e.target.blur();
        });

        jQuery.fn.dataTableExt.pager.numbers_length = 6;

        doResize();
    }

    $(window).resize(function () {
        doResize();
    });

    window.onload = function () {
        doOnInit();
    };
</script>