        </div>
        <div
            id="milestone"
            class="content has-bg bg-default-darker"
            data-scrollview="true">
            <div
                class="content-bg"
                style="background-image: url(../assets/img/bg/bg-eventtimeline.jpg)"
                data-paroller-factor="0.5"
                data-paroller-factor-md="0.01"
                data-paroller-factor-xs="0.01">
            </div>
            <div class="container"></div>
        </div>
        <div
            id="event"
            class="content bg-silver-lighter"
            data-scrollview="true">
            <div class="container pr-0 pl-0">
                <h2 class="content-title">Event Timeline</h2>
                <div
                    class="d-table timeline w-100"
                    v-if="eventInfo !== null">
                    <div class="d-table-row">
                        <div
                            class="d-table-cell service"
                            v-if="eventInfo.timelines && eventInfo.timelines.length"
                            v-for="(t, i) in eventInfo.timelines" :key="i">
                            <div class="timelines position-absolute">
                                <div
                                    class="icon bg-theme"
                                    data-animation="true"
                                    data-animation-type="bounceIn">
                                    <i
                                        class="fa fa-fast-backward"
                                        v-if="i === 0">
                                    </i>
                                    <i
                                        class="fa fa-play"
                                        v-if="i === 1">
                                    </i>
                                    <i
                                        class="fa fa-fast-forward"
                                        v-if="i === 2">
                                    </i>
                                </div>
                                <div class="info">
                                    <h4
                                        class="title"
                                        v-text="t.time">
                                    </h4>
                                    <p
                                        class="desc"
                                        v-text="t.activity">
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div
                    class="row"
                    v-if="eventInfo !== null">
                    <div class="col-md-12 col-sm-12">
                        <div class="card card-inverse bg-gradient-black">                            
                            <div class="card-block padding2">
                                <h4 class="card-title text-center text-white">Event Information</h4>
                                <ul class="list-group list-group-flush">
                                    <li                                        
                                        class="list-group-item"
                                        v-if="eventInfo.details && eventInfo.details.length"
                                        v-for="(d, i) in eventInfo.details" :key="i">
                                        <div class="event-info">
                                            <div
                                                class="timerange"
                                                v-if="d.timerange"
                                                v-text="d.timerange">
                                            </div>
                                            <div class="activity">
                                                <ul>
                                                    <li
                                                        v-if="d.activities && d.activities.length"
                                                        v-for="(a, j) in d.activities" :key="j"
                                                        v-html="a">
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div
            id="action-box"
