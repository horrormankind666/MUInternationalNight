                    type="hidden"
                    id="ipaddress"
                    value="@ip"
                />
                <h2 class="content-title">Registration</h2>
                <div v-if="autoCloseForm">
                    <h4 class="content-desc">
                        For thai people registration only&nbsp;
                        <strong
                            v-text="labels.limit"
                            class="text-green">
                        </strong>&nbsp;
                        Persons
                    </h4>
                    <div name="demo-form">
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <fieldset v-bind:disabled="disabled.registerForm">
                                    <div class="form-group">
                                        <label
                                            class="required"
                                            for="studentCode">
                                            Student ID / Passport No. / Thai Citizen ID
                                        </label>
                                        <div class="input-group">
                                            <input 
                                                type="text"
                                                id="studentCode"
                                                class="form-control"
                                                v-uppercase
                                                v-on:keypress="englishNumeric"
                                                v-on:blur="findStudentcode"
                                                v-model.trim="forms.IdCard"
                                                maxlength="13"
                                            />
                                            <span
                                                class="input-group-addon"
                                                v-show="disabled.searchPerson">
                                                Searching...
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label
                                            class="required"
                                            for="title">
                                            Title Prefix
                                        </label>
                                        <select
                                            class="form-control"
                                            v-model="forms.TitleName"
                                            v-on:change="TitleNameChange">
                                            <option value="" selected>Please Select</option>
                                            <option value="Mr.">Mr.</option>
                                            <option value="Mrs.">Mrs.</option>
                                            <option value="Miss">Miss</option>
                                            <option value="Asst.Prof.">Asst.Prof.</option>
                                            <option value="Assoc.Prof.">Assoc.Prof.</option>
                                            <option value="Prof.">Prof.</option>
                                            <option value="Emeritus Prof.">Emeritus Prof.</option>
                                            <option value="Dr.">Dr.</option>
                                            <option value="Other">Other</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label
                                            for="otherTitle">
                                            Other Title Prefix
                                        </label>
                                        <input
                                            type="text"
                                            id="otherTitle"
                                            class="form-control"
                                            v-on:keypress="englishChar"
                                            v-model.trim="forms.TitleNameOther"
                                            v-bind:disabled="disabled.otherTitle"
                                            maxlength="50"
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label
                                            class="required"
                                            for="firstname">
                                            First Name
                                        </label>
                                        <input
                                            type="text"
                                            id="firstname"
                                            class="form-control"
                                            v-on:keypress="englishChar"
                                            v-model.trim="forms.Firstname"
                                            maxlength="50"
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label
                                            for="middlename">
                                            Middle Name
                                        </label>
                                        <input
                                            type="text"
                                            id="middlename"
                                            class="form-control"
                                            v-on:keypress="englishChar"
                                            v-model.trim="forms.MiddleName"
                                            maxlength="50"
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label
                                            class="required"
                                            for="lastname">
                                            Last Name
                                        </label>
                                        <input
                                            type="text"
                                            id="lastname"
                                            class="form-control"
                                            v-on:keypress="englishChar"
                                            v-model.trim="forms.Lastname"
                                            maxlength="50"
                                        />
                                    </div>
                                    <div class="form-group">
                                        <label
                                            class="required"
                                            for="email">
                                            Email Address
                                        </label>
                                        <input type="email"
                                               id="email"
                                               class="form-control"
                                               v-on:keypress="englishChar"
                                               v-model.trim="forms.Email"
                                               maxlength="255" />
                                    </div>
                                    <div class="form-group">
                                        <label
                                            for="facebook">
                                            Facebook
                                        </label>
                                        <input
                                            type="text"
                                            id="facebook"
                                            class="form-control"
                                            v-on:keypress="englishChar"
                                            v-model.trim="forms.Facebook"
                                            maxlength="255"
                                        />
                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <fieldset v-bind:disabled="disabled.registerForm">
                                    <div class="form-group">
                                        <label
                                            class="required"
                                            for="section">
                                            Faculty / College / Institue / Center
                                        </label>
                                        <select
                                            id="section"
                                            class="form-control"
                                            v-model="forms.Section">
                                            <option
                                                value=""
                                                selected>
                                                Please Select
                                            </option>
                                            <option
                                                v-for="(f,i) in faculties" :key="f.facultycode" :value="f.facultycode"
                                                v-text="f.facultycode + ' - ' + f.facultyname">
                                            </option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label
                                            class="required"
                                            for="country">
                                            Country
                                        </label>
                                        <select
                                            id="country"
                                            class="form-control"
                                            v-model="forms.Country">
                                            <option
                                                value=""
                                                selected>
                                                Please Select
                                            </option>
                                            <option
                                                v-for="(c,i) in countries" :key="c.id" :value="c.id"
                                                v-text="c.countryNameEN">
                                            </option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label
                                            class="required"
                                            for="food">
                                            Food
                                        </label>
                                        <select
                                            id="food"
                                            class="form-control"
                                            v-model="forms.Food">
                                            <option value="" selected>Please Select</option>
                                            <option value="General">General</option>
                                            <option value="Vegetarian">Vegetarian</option>
                                            <option value="Halal">Halal</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label
                                            class="required"
                                            for="statusMU">
                                            Status at Mahidol University
                                        </label>
                                        <select
                                            id="statusMU"
                                            class="form-control"
                                            v-on:change="StatusMUChange"
                                            v-model="forms.StatusMU">
                                            <option value="" selected>Please Select</option>
                                            <option value="Student">Student</option>
                                            <option value="Staff">Staff</option>
                                            <option value="Faculty">Faculty</option>
                                            <option value="Other">Other</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label
                                            for="position">
                                            Position
